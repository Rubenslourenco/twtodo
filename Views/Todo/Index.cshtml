@model List<TwTodo.Models.Todo>

<h1>@ViewData["Title"]</h1>
@if(Model.Count > 0) {

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titulo</th>
      <th scope="col">Criado em</th>
      <th scope="col">Data entrega</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var todo in Model) {
    <tr>
      <td>@todo.Id</td>
      <td>@todo.Title</td>
      <td>@todo.CreateAt</td>
    using SQLitePCL;
    using SQLitePCL;
      <td>@todo.Deadline</td>
        <td>
            <a class="btn btn-success btn-sm">Concluir</a>
            <a class="btn btn-warning btn-sm">Editar</a>
            <a class="btn btn-danger btn-sm">Excluir</a>
        </td>
      
    </tr>
    }
   
  </tbody>
</table>

}else {
    <p>Nenhuma Tarefa foi encontrada </p>
}
<a class="btn btn-primary" asp-controller="Todo" asp-action="Create">Nova Tarefa</a>